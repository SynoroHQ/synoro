{
  "name": "@synoro/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    }
  },
  "main": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "test": "export NODE_OPTIONS='--max-old-space-size=16096' && bun with-env vitest --logLevel=info",
    "test:run": "export NODE_OPTIONS='--max-old-space-size=16096' && bun with-env vitest run",
    "test:coverage": "export NODE_OPTIONS='--max-old-space-size=16096' && bun with-env vitest run --coverage",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@sindresorhus/slugify": "2.2.1",
    "@synoro/auth": "workspace:*",
    "@synoro/db": "workspace:*",
    "@synoro/lib": "workspace:*",
    "@synoro/validators": "workspace:*",
    "@trpc/server": "11.4.4",
    "date-fns": "4.1.0",
    "nanoid": "^5.1.5",
    "superjson": "2.2.2",
    "zod": "4.0.17",
    "ai": "^5.0.15",
    "@ai-sdk/openai": "^2.0.15",
    "langfuse-vercel": "^3.38.4",
    "@opentelemetry/auto-instrumentations-node": "^0.62.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/semantic-conventions": "^1.25.1"
  },
  "devDependencies": {
    "@synoro/eslint-config": "workspace:*",
    "@synoro/prettier-config": "workspace:*",
    "@synoro/tests": "workspace:*",
    "@synoro/tsconfig": "workspace:*",
    "eslint": "9.33.0",
    "prettier": "3.6.2",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "prettier": "@synoro/prettier-config"
}
