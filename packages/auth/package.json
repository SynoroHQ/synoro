{
  "name": "@synoro/auth",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "react-server": "./dist/index.rsc.js",
      "default": "./dist/index.js"
    },
    "./env": {
      "types": "./env.ts",
      "default": "./env.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "default": "./dist/middleware.js"
    }
  },
  "files": [
    "dist",
    "env.ts"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@synoro/db": "workspace:*",
    "@synoro/emails": "workspace:*",
    "@t3-oss/env-nextjs": "^0.13.8",
    "better-auth": "1.3.8",
    "next": "15.5.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "zod": "4.1.5"
  },
  "devDependencies": {
    "@synoro/eslint-config": "workspace:*",
    "@synoro/prettier-config": "workspace:*",
    "@synoro/tsconfig": "workspace:*",
    "eslint": "9.34.0",
    "prettier": "3.6.2",
    "tsup": "8.5.0",
    "typescript": "5.9.2"
  },
  "prettier": "@qco/prettier-config"
}
