{
  "name": "@synoro/tg-bot",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "with-env": "dotenv -e ../../.env --",
    "dev": "bun run with-env -- bun --watch src/index.ts",
    "start": "bun run with-env -- bun src/index.ts",
    "build": "tsup",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.15",
    "@ai-sdk/openai-compatible": "^1.0.8",
    "@opentelemetry/auto-instrumentations-node": "^0.62.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@synoro/db": "workspace:*",
    "@synoro/prompts": "workspace:*",
    "@t3-oss/env-core": "0.13.8",
    "ai": "^5.0.15",
    "grammy": "^1.38.0",
    "langfuse": "^3.38.4",
    "langfuse-vercel": "^3.38.4",
    "zod": "4.0.17"
  },
  "devDependencies": {
    "@synoro/eslint-config": "workspace:*",
    "@synoro/prettier-config": "workspace:*",
    "@synoro/tsconfig": "workspace:*",
    "@types/node": "24.3.0",
    "dotenv-cli": "10.0.0",
    "eslint": "9.33.0",
    "prettier": "3.6.2",
    "tsup": "8.5.0",
    "typescript": "5.9.2"
  },
  "prettier": "@synoro/prettier-config"
}
