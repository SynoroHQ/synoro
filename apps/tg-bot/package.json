{
  "name": "@synoro/tg-bot",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "with-env": "dotenv -e ../../.env --",
    "dev": "bun run with-env -- bun --watch src/index.ts",
    "start": "bun run with-env -- bun src/index.ts",
    "build": "tsup",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint"
  },
  "dependencies": {
    "@synoro/api": "workspace:*",
    "@t3-oss/env-core": "0.13.8",
    "@trpc/client": "11.5.0",
    "grammy": "^1.38.1",
    "superjson": "2.2.2",
    "zod": "4.1.3"
  },
  "devDependencies": {
    "@synoro/eslint-config": "workspace:*",
    "@synoro/prettier-config": "workspace:*",
    "@synoro/tsconfig": "workspace:*",
    "@types/node": "24.3.0",
    "dotenv-cli": "10.0.0",
    "eslint": "9.34.0",
    "prettier": "3.6.2",
    "tsup": "8.5.0",
    "typescript": "5.9.2"
  },
  "prettier": "@synoro/prettier-config"
}
