{
  "name": "@synoro/root",
  "private": true,
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @synoro/db push",
    "db:studio": "turbo -F @synoro/db studio",
    "dev": "turbo watch dev --continue --filter=@synoro/api --filter=@synoro/tg-bot",
    "dev:api": "turbo watch dev --continue --filter=@synoro/api",
    "dev:bot": "turbo watch dev --continue --filter=@synoro/tg-bot",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "biome lint .",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "biome:fix": "biome lint --fix",
    "lint:ws": "bun x sherif@latest",
    "postinstall": "bun run lint:ws",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "knip": "bun run with-env -- knip",
    "with-env": "bun x dotenv -e .env --",
    "update-prompt": "bun -C packages/prompts run update-prompt --",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@synoro/prettier-config": "workspace:*",
    "@trigger.dev/build": "4.0.1",
    "@turbo/gen": "2.5.6",
    "@types/node": "24.3.0",
    "knip": "^5.63.0",
    "prettier": "3.6.2",
    "turbo": "2.5.6",
    "typescript": "5.9.2"
  },
  "prettier": "@synoro/prettier-config",
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "overrides": {
    "nanoid": "3.3.7"
  }
}
